
#modalMostrar.modal.fade(role='dialog')
    .modal-dialog.modal-lg
        .modal-content
            .modal-header
                h4.modal-title Carga
            .modal-body
                

                ul.nav.nav-tabs
                    li.nav-item
                        a.nav-link.active(href='#modalTitularUno', data-toggle='tab') Titular
                    li.nav-item
