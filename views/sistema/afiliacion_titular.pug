                            input#nombre_titular.form-control(type='text', placeholder='Nombre', name='nombre', required='true', oninvalid="this.setCustomValidity('¡Este campo es obligatorio!')", oninput="setCustomValidity('')")
                        .col-2
                           select#sexo_titular.custom-select.mb-2.mr-sm-2.mb-sm-0.form-control(name='sexo', required='true', oninvalid="this.setCustomValidity('¡Este campo es obligatorio!')", oninput="setCustomValidity('')")
