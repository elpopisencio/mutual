#modalAltaTitular.modal.fade(role='dialog')
    .modal-dialog.modal-lg
        .modal-content
            .modal-header
                h2.modal-title Alta Titular
            .modal-body


                form#afiliacionTitular()
                    .row
                        .col
                            input#apellido_titular.form-control(type='text', placeholder='Apellido', value='', required='true', oninvalid="this.setCustomValidity('¡Este campo es obligatorio!')", oninput="setCustomValidity('')")
