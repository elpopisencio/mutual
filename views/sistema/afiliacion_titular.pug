                            label Fecha entrega tarjeta
                            input#fecha_tarjeta_titular.form-control(type='date',  name='fecha_tarjeta', oninput="setCustomValidity('')")
                        .col
                            label Fecha nacimiento
                            input#fecha_nacimiento_titular.form-control(type='date',  name='fecha_nacimiento', required='true', oninvalid="this.setCustomValidity('¡Este campo es obligatorio!')", oninput="setCustomValidity('')")

