                                option(value='M') Masculino
                                option(value='F') Femenino
                    .row
                        .col-2
                            select#id_tipo_documento_titular.custom-select.mb-2.mr-sm-2.mb-sm-0.form-control(name='id_tipo_documento', oninput="setCustomValidity('')")
